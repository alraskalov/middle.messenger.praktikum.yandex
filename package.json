{
  "name": "messenger",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "node": ">=14.18.0 || >=16.0.0"
  },
  "scripts": {
    "eslint": "npx eslint ./src --fix  --ext .js,.jsx,.ts,.tsx",
    "dev": "vite",
    "start": "tsc --noEmit && vite build && vite preview",
    "build": "tsc --noEmit && vite build",
    "style": "npx stylelint ./src/**/*.scss --fix",
    "test": "npx lint-staged && mocha",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.{js,ts}": "eslint --fix",
    "*.ts": "tsc --noEmit --pretty",
    "./src/**/*.{css,scss}": "stylelint --fix"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/sinon": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "chai": "^4.3.10",
    "eslint": "^8.53.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.0",
    "jsdom": "^23.0.1",
    "lint-staged": "^15.2.0",
    "mocha": "^10.2.0",
    "sass": "^1.69.4",
    "sinon": "^17.0.1",
    "stylelint": "^15.11.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  },
  "dependencies": {
    "@types/node": "^20.9.0",
    "handlebars": "^4.7.8",
    "vite-plugin-handlebars": "^1.6.0"
  }
}
